#!/usr/bin/env ruby

require_relative 'lib/parse_arguments'

command = ARGV[0]
options = ParseArguments.parse
options[:name] = ARGV[1]
error_messages = ParseArguments.validate(options)

if error_messages.empty?
  puts "Theoretically creating: a purchase named #{options[:name]}, with #{options[:calories]} calories and $#{options[:price]} cost"
else
  puts error_messages
end
